{
    "manifest_version": 3,
    "name": "OriginSteward Capture",
    "version": "1.0",
    "description": "Frictionless capture for OriginSteward",
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost:5002/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_title": "OriginSteward"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}