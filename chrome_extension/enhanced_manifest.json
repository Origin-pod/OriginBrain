{
    "manifest_version": 3,
    "name": "OriginBrain Enhanced",
    "version": "2.0",
    "description": "Advanced capture and consumption management for OriginBrain",
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage",
        "scripting",
        "notifications",
        "downloads",
        "tabs"
    ],
    "host_permissions": [
        "http://localhost:5002/*",
        "http://localhost:3000/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "enhanced_background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "enhanced_content.js"
            ],
            "css": [
                "enhanced_styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_title": "OriginBrain Enhanced"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["icon.png"],
            "matches": ["<all_urls>"]
        }
    ],
    "commands": {
        "capture-page": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Capture current page"
        },
        "toggle-panel": {
            "suggested_key": {
                "default": "Ctrl+Shift+P",
                "mac": "Command+Shift+P"
            },
            "description": "Toggle consumption panel"
        }
    }
}